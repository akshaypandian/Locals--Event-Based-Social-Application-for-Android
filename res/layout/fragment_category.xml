<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imagearts"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/arts" />

            <ImageView
                android:id="@+id/imageconcerts"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/concert" />

            <ImageView
                android:id="@+id/imageConference"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/conference" />

            <ImageView
                android:id="@+id/imageEducation"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/education" />

            <ImageView
                android:id="@+id/imageFamily"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/family" />

            <ImageView
                android:id="@+id/imageFestival"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/festivals" />

            <ImageView
                android:id="@+id/imageHoliday"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/holiday" />

            <ImageView
                android:id="@+id/imageRestaurant"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant" />

            <ImageView
                android:id="@+id/imageGallery"
                android:layout_width="335dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>